@page
@model Imperium.Pages.Contactos.IndexModel

@{
    ViewData["Title"] = "Mensajes";
}

<h1>Mensajes</h1>
<h6>Puedes verificar y borrar los mensajes que te envian los usuarios.</h6>

<table class="table table-hover table-striped">
    <thead style="background-color: #38383F; color:white;">
        <tr class="text-center">
            <th>Nombre</th>
            <th>Correo</th>
            <th>Número</th>
            <th>Mensaje</th>
        </tr>
    </thead>
</table>
<div>
    <div>
        @foreach (var item in Model.Contacto)
        {
        <div class="card mb-3">
            <div class="card-body text-center row">
                <div class="col">
                    <p>@Html.DisplayFor(modelItem => item.Nombre)</p>
                </div>
                <div class="col">
                    <b>@Html.DisplayFor(modelItem => item.Correo)</b>
                </div>
                <div class="col">
                    <p>@Html.DisplayFor(modelItem => item.Numero)</p>
                </div>
                <div class="col">
                    <p class="d-inline-block text-truncate" style="max-width: 150px;">@Html.DisplayFor(modelItem => item.Mensaje)</p>
                </div>
                <hr />
                <div>
                    <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@item.ContactoId">Ver más</a>
                    <a class="btn btn-outline-dark" asp-page="./Delete" asp-route-id="@item.ContactoId">Eliminar</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

