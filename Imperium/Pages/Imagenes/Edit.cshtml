@page
@model Imperium.Pages.Imagenes.EditModel

@{
    ViewData["Title"] = "Vivienda | Imagen";
}

<h1>Editar</h1>

<h4>Imagen</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Imagen.ImagenId" />
            <div class="form-group col-4">
                <label asp-for="Imagen.Nombre" class="control-label">Nombre:</label>
                <input asp-for="Imagen.Nombre" class="form-control" />
                <span asp-validation-for="Imagen.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Imagen.Archivo" class="control-label">Imagen:</label>
                <input type="file" name="archivo" asp-for="Imagen.Archivo" class="form-control" />
                <span asp-validation-for="Imagen.Archivo" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Imagen.ViviendaId" class="control-label">Vivienda:</label>
                <select asp-for="Imagen.ViviendaId" class="form-control" asp-items="ViewBag.ViviendaId"></select>
                <span asp-validation-for="Imagen.ViviendaId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Editar" class="btn btn-dark" /> |
                <a class="btn btn-outline-dark" asp-page="./Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
