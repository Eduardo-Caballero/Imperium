@page
@model Imperium.Pages.Imagenes.DeleteModel

@{
    ViewData["Title"] = "Vivienda | Imagen";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar esta imagen?</h3>
<div>
    <h4>Imagen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen.Nombre)
        </dd>
        <dt class="col-sm-2">
            Imagen:
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Html.DisplayFor(model => model.Imagen.Archivo)" width="250"/>
        </dd>
        <dt class="col-sm-2">
            Vivienda:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen.Vivienda.Nombre)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Imagen.ImagenId" />
        <input type="submit" value="Eliminar" class="btn btn-dark" /> |
        <a class="btn btn-outline-dark" asp-page="./Index">Regresar</a>
    </form>
</div>
