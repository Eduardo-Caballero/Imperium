@page
@model Imperium.Pages.Imagenes.DetailsModel

@{
    ViewData["Title"] = "Vivienda | Imagen";

}

<h1>Detalles</h1>

<div>
    <h4>Imagen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen.Nombre)
        </dd>
        <dt class="col-sm-2">
            Imagen:
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Html.DisplayFor(model => model.Imagen.Archivo)"  width="250"/>
        </dd>
        <dt class="col-sm-2">
            Vivienda:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen.Vivienda.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@Model.Imagen.ImagenId">Editar</a> |
    <a class="btn btn-outline-dark" asp-page="./Index">Regresar</a>
</div>
