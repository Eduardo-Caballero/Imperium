@page
@model Imperium.Pages.Viviendas.VistaModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Vivienda.Nombre);
}

<div class="row">
    <div class="col-7">
        <h1>@Html.DisplayFor(model => model.Vivienda.Nombre)</h1>
    </div>
    <div class="col-2"></div>
    <div class="col-3">
        <h1>$@Html.DisplayFor(model => model.Vivienda.Precio)<span class="btn-sm">MXN</span> |
        <span class="btn-sm text-uppercase">@Html.DisplayFor(model => model.Vivienda.Transaccion)</span></h1>
    </div>
</div>
<div class="col-7">
    <h4>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
        </svg>
    @Html.DisplayFor(model => model.Vivienda.Ciudad.Nombre)</h4>
</div>
<div id="Inicio" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/@Html.DisplayFor(model => model.Vivienda.Imagen1)" width="550" height="450" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/@Html.DisplayFor(model => model.Vivienda.Imagen2)" width="550" height="450" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/@Html.DisplayFor(model => model.Vivienda.Imagen3)" width="550" height="450" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/@Html.DisplayFor(model => model.Vivienda.Imagen4)" width="550" height="450" class="d-block w-100" alt="...">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#Inicio" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#Inicio" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br />
<br />
<div class="row">
    <div class="col-3">
        <h4>Descripción</h4>
        <hr class="font-weight-bold" />
    </div>
    <div class="col-9">
        <div class="card-body">
            <ul>
                <li>
                    <span>Tipo:</span>
                    <strong>@Html.DisplayFor(model => model.Vivienda.TipoVivienda.Nombre)</strong>
                </li>
                <li>
                    <span>Transacción:</span>
                    <strong>@Html.DisplayFor(model => model.Vivienda.Transaccion)</strong>
                </li>
                <li>
                    <span>Precio:</span>
                    <strong>@Html.DisplayFor(model => model.Vivienda.Precio)</strong>
                </li>
                <li>
                    <span>Superficie:</span>
                    <strong>@Html.DisplayFor(model => model.Vivienda.Superficie)</strong>
                </li>
            </ul>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-3">
        <h4>Descripción</h4>
        <hr class="font-weight-bold"/>
    </div>
    <div class="col-9">
        <div class="card-body">
            <h6>@Html.DisplayFor(model => model.Vivienda.Descripcion)</h6>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-3">
        <h4>Características</h4>
        <hr class="font-weight-bold"/>
    </div>
    <div class="col-9">
        <div class="card-body">
            <h6>@Html.DisplayFor(model => model.Vivienda.Caracteristicas)</h6>
        </div>
    </div>
</div>
<br />
<br />
<div class="text-center">
    <iframe src="@Html.DisplayFor(model => model.Vivienda.Ubicacion)" width="1080" height="750" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</div>

<br />
<br />
<div class="card" style="background-color:lightgray;">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <a>
                    <img src="~/img/coment.png" width="30" height="24" class="d-inline-block align-text-top" />
                    <span>
                        <b style="font-size:x-large;">Comentarios</b>
                    </span>
                </a>
            </div>
            <div class="col-6 text-center form-group">
                <a class="btn btn-outline-dark" href="#" id="show"><i class="fa fa-eye"></i>Comentarios</a>
                <a asp-page="/Comentarios/Create" class="btn btn-outline-dark">Comentar</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div id="content" class="col-lg-12">
                <div id="element" class="col-lg-12" style="display: none;">
                    <div id="close"><a class="btn btn-small" href="#" id="hide" title="Cerrar"><i class="fa fa-close"></i></a></div>
                    @foreach (var item in Model.Comentario)
                    {
                        <div class="card mb-3">
                            <div class="card-body col-md-12">
                                <div class="row">
                                    <div class="col-3">
                                        <h5><b>@Html.DisplayFor(model => item.Usuario.Nombre)</b></h5>
                                    </div>
                                    <div class="col-9">
                                        <i>@Html.DisplayFor(modelItem => item.Descripcion)</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br />





