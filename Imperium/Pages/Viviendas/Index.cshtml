@page
@model Imperium.Pages.Viviendas.IndexModel

@{
    ViewData["Title"] = "Viviendas | Administrar";
}

<h1>Administrar las propiedades</h1>
<div class="row">
    <h6 class="col-10">
        Aquí podrás administrar todas las propiedades con las que cuenta la empresa, podrás modificar, verificar o  eliminar, dependiendo lo que necesites.
        De igual forma podrás agregar nuevas propiedades:
    </h6>
    <p class="col-2">
        <a class="btn btn-dark btn-lg" asp-page="Create">Añadir</a>
    </p>
</div>
<br />
<table class="table table-hover table-striped">
    <thead style="background-color: #38383F; color:white;">
        <tr>
            <th>
                Titulo:
            </th>
            <th>
                Transacción:
            </th>
            <th>
                Precio:
            </th>
            <th>
                Tipo de vivienda:
            </th>
            <th>
                Ciudad:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vivienda)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transaccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoVivienda.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Ciudad.Nombre)
                </td>
                <td class="text-center">
                    <a class="btn btn-outline-dark btn-sm" asp-page="./Edit" asp-route-id="@item.ViviendaId">Editar</a> |
                    <a class="btn btn-outline-dark btn-sm" asp-page="./Details" asp-route-id="@item.ViviendaId">Detalles</a> |
                    <a class="btn btn-outline-dark btn-sm" asp-page="./Delete" asp-route-id="@item.ViviendaId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
