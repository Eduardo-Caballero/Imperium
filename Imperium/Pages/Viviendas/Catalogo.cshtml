@page
@model Imperium.Pages.Viviendas.CatalogoModel

@{
    ViewData["Title"] = "Catalogo";
}

<h1>Propiedades en Yucatán | Inmobiliaria Xtreme</h1>
<hr />
<div class="album py-5">
    <div class="container">
        <br />
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Vivienda)
            {
                <div class="col">

                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="~/img/@Html.DisplayFor(modelItem => item.Imagen1)" width="100" height="225" />
                        <div class="card-body">
                            <h3 class="card-title">
                                $@Html.DisplayFor(modelItem => item.Precio)
                                <span class="btn-sm">@Html.DisplayFor(modelItem => item.Transaccion)</span>
                            </h3>
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                            <p class="card-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                                </svg>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </p>
                            <div class="align-items-center">
                                <div class="text-center">
                                    <a class="btn btn-dark" asp-page="./Vista" asp-route-id="@item.ViviendaId">VER MAS</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>











