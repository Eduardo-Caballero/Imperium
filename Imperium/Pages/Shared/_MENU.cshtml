<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/css/bootstrap-reboot.css" />
    <link rel="stylesheet" href="~/css/bootstrap-utilities.css" />
    <link rel="stylesheet" href="~/css/EstilosImperium.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#hide").on('click', function () {
                $("#element").hide();
                return false;
            });

            $("#show").on('click', function () {
                $("#element").show();
                return false;
            });
        });
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light mb-3" style="background-color: #38383F;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">
                    <img src="~/img/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    <strong class="colorwhite text-light">XTREME</strong>
                </a>
                <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        @{
                        @using Microsoft.AspNetCore.Http; 
                        @if (Convert.ToInt32(Context.Session.GetString("Nivel")) == 1)
                            {
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Index">INICIO</a></li>
                        <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Viviendas/Catalogo">CATÁLOGO</a></li>
                        <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Misions/Mision">MISIÓN</a></li>
                        <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Visions/Vision">VISIÓN</a></li>
                        <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Contactos/Create">CONTÁCTANOS</a></li>

                    </ul>
                    <div class="d-flex">
                        <a class="nav-link text-light btn btn-outline-light" aria-current="page" asp-page="/Login" asp-page-handler="Cerrar">CERRAR SESIÓN</a>
                    </div>
                            }
                         else
                            {
                                @if (Convert.ToInt32(Context.Session.GetString("Nivel")) == 2)
                                {
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Index">INICIO</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light font-weight-bold" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            VIVIENDA
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: #38383F;">
                            <li><a class="dropdown-item text-light font-weight-bold" asp-page="/Viviendas/Catalogo">Catálogo</a></li>
                            <li><a class="dropdown-item text-light font-weight-bold" asp-page="/Viviendas/Index">Viviendas</a></li>
                            <li><a class="dropdown-item text-light font-weight-bold" asp-page="/TipoViviendas/Index">Tipos de viviendas</a></li>
                            <li><a class="dropdown-item text-light font-weight-bold" asp-page="/Ciudades/Index">Ciudad</a></li>
                            <li><a class="dropdown-item text-light font-weight-bold" asp-page="/Comentarios/Index">Comentarios</a></li>

                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Misions/Index">MISIÓN</a></li>
                    <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Visions/Index">VISIÓN</a></li>
                    <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Usuarios/Index">USUARIOS</a></li>
                    <li class="nav-item"><a class="nav-link active text-light font-weight-bold" aria-current="page" asp-page="/Contactos/Index">MENSAJES</a></li>
                </ul>
                <div class="d-flex">
                    <a class="nav-link text-light btn btn-outline-light" aria-current="page" asp-page="/Login" asp-page-handler="Cerrar">CERRAR SESIÓN</a>
                </div>
                                }
                                else
                                {
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item d-flex">
                        <a class="nav-link text-light btn btn-outline-light" aria-current="page" asp-page="Login">LOGIN</a>
                    </li>
                </ul>
                                }
                        }
                        }
</div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted" style="background-color: #38383F; width: 100%; white-space: nowrap; line-height: 60px;">
        <div class="container">
            &copy; 2021 - Imperium - <a asp-area="" asp-page="/Contacto">Contáctanos</a>
        </div>
    </footer>

    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
